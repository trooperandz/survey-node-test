{{!-- Show all listed questions to admin --}}
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div>
            <h1>View All Questions</h1>
            <p class="pull-right">Total Questions: <span id="question-count">{{questions.length}}</span></p>
            </div>
            <hr>
      {{!-- If there are questions in the system, populate.  Else show no questions feedback --}}
      {{#if questions}}
        {{#questions}}
            <div class="panel panel-warning panel-question">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-play" aria-hidden="true"></span>
                    {{this.question}}
                    <a href="#" class="text-danger pull-right delete-question-link" data-questionId="{{this.questionId}}"> <span class="glyphicon glyphicon-trash"></span></a>
                </div>
                <div class="panel-body">
                    <form class="form-horizontal">
                      <fieldset>
                        <div class="form-group">
                          <div class="col-lg-10">
                          {{#choices}}
                            <div class="radio">
                              <label>
                                <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
                                {{this}}
                              </label>
                            </div>
                         {{/choices}}
                          </div>
                        </div>
                      </fieldset>
                    </form>
                </div>
            </div> {{!-- /.panel --}}
        {{/questions}}
      {{else}}
            <div class="well">
                <p class="text-warning">There are no questions in the system!</p>
            </div>
      {{/if}}
        </div>
    </div>
</div>